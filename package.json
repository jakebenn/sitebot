{
  "name": "generic-enterprise-chatbot",
  "version": "1.0.0",
  "description": "Configurable enterprise chatbot powered by Perplexity AI",
  "private": true,
  "scripts": {
    "dev:api": "npx kill-port 3001 || true && cd services/api && npm run dev:watch",
    "dev:web": "npx kill-port 3000 || true && cd services/web && npm run dev",
    "dev:all": "run-p dev:api dev:web",
    "build:web": "cd services/web && npm run build",
    "serve:web": "cd services/web && npm run serve",
    "deploy:api:dev": "cd services/api && npm run deploy:dev",
    "deploy:api:prod": "cd services/api && npm run deploy:prod",
    "deploy:web:s3": "cd services/web && npm run deploy:s3",
    "test:api": "cd services/api && npm test",
    "install:all": "npm install && cd services/api && npm install && cd ../web && npm install",
    "setup": "npm run install:all",
    "build:all": "npm run build:web",
    "start:web": "cd services/web && npm run start"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5",
    "kill-port": "^2.0.1"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "chatbot",
    "aws-lambda",
    "websocket",
    "perplexity-ai",
    "serverless",
    "nextjs",
    "react",
    "aws-s3"
  ]
}
